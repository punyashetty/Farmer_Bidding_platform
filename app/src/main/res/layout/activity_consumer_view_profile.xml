<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d1">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shravanram.greenauction.ConsumerViewProfile">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/greenColor"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@android:color/black"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="PROFILE"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/image1"
                    android:rotation="45"
                    android:layout_below="@+id/linearlayout"
                    android:layout_marginTop="-10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/square"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/image_user"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:padding="8dp"
                        android:src="@drawable/ic_person_pin_black_24dp"/>
                    <TextView
                        android:id="@+id/Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_user"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:hint="Name"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:layout_alignBottom="@+id/image_user"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_smartphone_black_24dp"/>
                    <TextView
                        android:id="@+id/Text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_phone"
                        android:layout_alignParentTop="true"
                        android:hint="Phone"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:inputType="textPersonName"
                        android:textSize="15sp"
                        android:layout_alignBottom="@+id/image_phone"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativelayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/image_location"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_place_black_24dp"/>
                    <TextView
                        android:id="@+id/Text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_location"
                        android:layout_alignParentTop="true"
                        android:hint="Location"
                        android:layout_marginTop="10dp"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:layout_alignBottom="@+id/image_location"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativelayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/image_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_mail_black_24dp"/>
                    <TextView
                        android:id="@+id/Text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_email"
                        android:layout_alignParentTop="true"
                        android:hint="Email"
                        android:layout_marginTop="10dp"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:layout_alignBottom="@+id/image_email"

                        />
                </RelativeLayout>



            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu_consumer">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>