<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d1">

    <RelativeLayout
        android:id="@+id/relativelayout1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueDark"
        tools:context="com.example.shravanram.greenauction.ConsumerHomeActivity">

        <Button
            android:id="@+id/viewAllPortals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/fancybutton"
            android:text="View all ongoing auctions"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/viewMyOngoingPortal"
            android:layout_below="@+id/viewAllPortals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/fancybutton"
            android:text="View my ongoing auctions"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/viewMyCompletedPortal"
            android:layout_below="@+id/viewMyOngoingPortal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/fancybutton"
            android:text="View my winning auctions"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu_farmer">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>